extends ../../layouts/default

include ../../mixins/organiser

block intro
	.page-intro: .container
		h1.page-title About
		p.lead Here you can enter some about info.
		p.lead And here you can mention organisers:

block content
	.page-content
		.section.highlight: .container
			h2 Organisers
			p.lead Each month the TeJS team works to bring you great presenters in a great venue.
			.row.about-organisers
				each org in organisers
					.col-sm-3
						+organiser(org)
			
		
		//- CODE
